<%- include ("partials/header"); -%>

<div class="container">

    <div class="row">
        <div class="border border-light col col-lg-12 mt-5 mb-3 rounded" id="colo">

            <h2 class="fon pt-2">Topic: <a><%= csblog.topic%></a></h2>
            <p id="big" class="fon"><%= csblog.description%></p>
            <p class="fon">By <%= csblog.name%></p>


            <div class="row">

                <form action="/csblogs/<%= csblog._id %>/edit" method="GET">
                    <button class="btn btn-light m-3">Edit</button>
                </form>
                <form action="/csblogs/<%= csblog._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-light m-3">Delete</button>
                </form>
            </div>


        </div>
    </div>
</div>

<%- include ("partials/footer"); -%>